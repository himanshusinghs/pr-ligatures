{
  "manifest_version": 3,
  "name": "PR Ligatures",
  "version": "1.0.0",
  "description": "Enables font ligatures when reviewing pull requests on code hosting platforms",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}